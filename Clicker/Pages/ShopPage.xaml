<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clicker.Pages.ShopPage"
             Title="Shop">
    <VerticalStackLayout>
        <Label Text="Shop!" HorizontalOptions="Center" />

        <VerticalStackLayout x:Name="Konto">
            <Grid ColumnDefinitions="Auto,Auto,*">
                <Label Text="Poziom: " FontSize="15" Grid.Column="0"/>
                <Label Text=" ?" x:Name="LvlLabel" FontSize="15" Grid.Column="1"/>
            </Grid>

            <Grid ColumnDefinitions="Auto,Auto,*">
                <Label Text="Cookies: " FontSize="15" Grid.Column="0"/>
                <Label Text=" ?" x:Name="CookiesLabel" FontSize="15" Grid.Column="1"/>
            </Grid>
        </VerticalStackLayout>

        <!--Upgrades-->
        <ScrollView>
            <VerticalStackLayout Spacing="16" HorizontalOptions="Center" Padding="10">

                <Border Stroke="#D0D0D0" StrokeThickness="1" StrokeShape="RoundRectangle 14" Padding="14" HorizontalOptions="Center">

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="14">

                        <Image Grid.Column="0" Source="blast.png" WidthRequest="72" HeightRequest="72" VerticalOptions="Center"/>

                        <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">

                            <HorizontalStackLayout Spacing="8">
                                <Label Text="Biden Blast" FontSize="20" FontAttributes="Bold"/>

                                <Label Text="XXX" FontSize="18" FontAttributes="Bold" TextColor="#2ECC71"/>
                            </HorizontalStackLayout>

                            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <Label Text="Laserek" FontSize="14" TextColor="Gray" VerticalOptions="Center"/>

                                <Button Grid.Column="1" Text="Kup" FontSize="14" Padding="12,4" CornerRadius="8" BackgroundColor="#3498DB" TextColor="White"/>
                            </Grid>

                        </VerticalStackLayout>

                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>


    </VerticalStackLayout>
</ContentPage>